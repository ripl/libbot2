root = true

[*]
charset = utf
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.java]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4
max_line_length = 79

[Makefile]
indent_style = tab
